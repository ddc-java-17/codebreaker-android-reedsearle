<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/column_headers"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingHorizontal="@dimen/full_dynamic_spacing"
  android:theme="@style/ScoreColumn"
  android:orientation="horizontal"
  >

  <TextView
    android:id="@+id/rank"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_marginVertical="@dimen/half_static_spacing"
    tools:text="9"
    />

  <TextView
    android:id="@+id/guess_count"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:layout_marginVertical="@dimen/half_static_spacing"
    tools:text="12"
    />

  <TextView
    android:id="@+id/duration"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:layout_marginVertical="@dimen/half_static_spacing"
    tools:text="1:23"
    />

  <TextView
    android:id="@+id/timestamp"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:layout_marginVertical="@dimen/half_static_spacing"
    tools:text="01/23/4567"
    />

</LinearLayout>
