<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingVertical="@dimen/half_static_spacing"
  android:paddingHorizontal="@dimen/half_dynamic_spacing"
  android:gravity="start|center_vertical">

  <TextView
    android:id="@+id/rank"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/half_static_spacing"
    android:layout_weight="2"
    style="@style/RankAlignment"
    tools:text="800"
    />

  <TextView
    android:id="@+id/display_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/half_static_spacing"
    android:layout_weight="13"
    tools:text="Some Other Player"
    />

  <TextView
    android:id="@+id/avg_guess_count"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/half_static_spacing"
    android:layout_weight="4"
    style="@style/NumberAlignment"
    tools:text="80.808"
    />

  <TextView
    android:id="@+id/avg_duration"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/half_static_spacing"
    android:layout_weight="5"
    style="@style/NumberAlignment"
    tools:text="80:80.808"
    />

</LinearLayout>